{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=ContractReviewScheduler;Integrated Security=true;Encrypt=true;TrustServerCertificate=false;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": "Warning",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "Jwt": {
    "Key": "your-super-secret-key-min-32-characters-long-required-here!",
    "Issuer": "ContractReviewScheduler",
    "Audience": "ContractReviewSchedulerClient",
    "ExpirationMinutes": 60
  },
  "Ldap": {
    "Path": "LDAP://company.local",
    "Domain": "company.local",
    "ReviewerGroup": "ReviewersGroup"
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "FromAddress": "noreply@company.local",
    "FromName": "Contract Review System",
    "Username": "",
    "Password": "",
    "UseSSL": true,
    "MaxRetries": 3,
    "RetryDelaySeconds": 60
  },
  "AllowedHosts": "*"
}
