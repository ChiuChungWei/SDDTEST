{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=ContractReviewScheduler;Trusted_Connection=true;Encrypt=false;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Jwt": {
    "Key": "your-super-secret-key-min-32-characters-long-required-here!",
    "Issuer": "ContractReviewScheduler",
    "Audience": "ContractReviewSchedulerClient",
    "ExpirationMinutes": 60
  },
  "Ldap": {
    "Path": "LDAP://company.local",
    "Domain": "company.local",
    "ReviewerGroup": "ReviewersGroup"
  }
}
